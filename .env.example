# Beagle Environment Configuration
# Copy this to .env and fill in your values

# Database
DATABASE_URL=postgresql://beagle:beagle_secure_2026@localhost:5432/beagle

# Redis
REDIS_URL=redis://localhost:6379

# MinIO Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=beagle_admin
MINIO_SECRET_KEY=beagle_minio_2026
MINIO_BUCKET=beagle-files

# Security
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI API Keys
GEMINI_API_KEY=your-gemini-api-key-here

# Application
ENVIRONMENT=development
DEBUG=true
ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://localhost:8000

# Rate Limiting
RATE_LIMIT_EXECUTE=10/minute
RATE_LIMIT_CHAT=30/minute
RATE_LIMIT_UPLOAD=5/minute

# File Upload
MAX_FILE_SIZE_MB=500
ALLOWED_EXTENSIONS=csv,xlsx,xls,json,parquet

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
